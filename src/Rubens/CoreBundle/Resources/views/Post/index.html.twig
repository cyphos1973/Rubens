{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Chapo</th>
                <th>Body</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Published</th>
                <th>Publishedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.subtitle }}</td>
                <td>{{ post.chapo }}</td>
                <td>{{ post.body }}</td>
                <td>{{ post.createdAt|date('d-m-Y à H:i') }}</td>
                <td>{{ post.updatedAt|date('d-m-Y à H:i') }}</td>
                <td>{{ post.published }}</td>
                <td>{{ post.publishedAt|date('d-m-Y à H:i') }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
