{# src/Rubens/RubensWebBundle/Resources/views/Backend/Categorie/index.html.twig #}

{% extends "RubensWebBundle:Backend:backend.html.twig" %}
{% block body %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                TABLES : catégories
            </div>
            <!-- /.panel-heading -->
            {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                <div class="flash-notice">
                    {{ flashMessage }}
                </div>
            </div>
            {% endfor %}
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-tables">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Crée</th>
                                <th>Mis à jour</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for categorie in entities %}
                            <tr class="odd gradeX">
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.title }}</td>
                                <td>{{ categorie.createdAt|date('d-m-Y à H:i')}}</td>
                                <td>{{ categorie.updatedAt|date('d-m-Y à H:i')}}</td>
                                <td><a href="{{path('rubens_admin_categorie_edit', {'id': categorie.id} )}}">Modifier</a> - <a href="{{path('rubens_admin_categorie_show', {'id': categorie.id} )}}">Voir</a></td>
                            </tr>
                           {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
{% endblock %}
