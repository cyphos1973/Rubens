<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration - Rubens</title>
    {% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/fonts/font-awesome/css/font-awesome.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/css/plugins/morris/morris-0.4.3.min.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/css/plugins/timeline/timeline.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/bootstrap-3.1.1/css/bootstrap.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/css/plugins/dataTables/dataTables.bootstrap.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/css/datepicker3.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/rubensweb/css/backend.css') }}" />
    {% endblock %}
        <link rel="shortcut icon" href="../assets/ico/favicon.png">
</head>
<body>
    <div id="wrapper">
    <!-- NAVBAR
    ================================================== -->
    {% include "RubensWebBundle:Backend:navbar.html.twig" %}
        <!-- /.navbar-static-top -->
    <!-- SIDEBAR
    ================================================== -->
    {% include "RubensWebBundle:Backend:sidebar.html.twig" %}

        <!-- /.navbar-static-side -->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Tableau de bord</h1>
                    <script type="text/javascript"><!--
google_ad_client = "ca-pub-8764804742914439";
/* pub 3 */
google_ad_slot = "7945351997";
google_ad_width = 468;
google_ad_height = 60;
//-->
</script>
<script type="text/javascript"
src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
</script>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                {% include "RubensWebBundle:Backend:menu-panel.html.twig" %}
            </div>  
            <div class="row">
                {% block body %}{% endblock %}
            </div>
            <!-- /.row -->
                    </div>
            <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
    {% block javascript %}
    <script src="{{ asset('bundles/rubensweb/js/jquery-1.11.1.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/bootstrap-3.1.1/js/bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/plugins/morris/raphael-2.1.0.min.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/plugins/morris/morris.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('bundles/rubensweb/js/backend.js') }}"></script>
    <script type="text/javascript" class="init">
        $(document).ready(function() {
            $('#dataTables-tables').dataTable({
                "paginate": true,
                "oLanguage": {
                    "sLengthMenu": "_MENU_ records par page"
	}
            });
        });
        $('#form .input-group.date').datepicker({
            language: "fr",
            daysOfWeekDisabled: "0,1",
            todayHighlight: true
        });
    </script>
    {% endblock %}
</body>
</html>
