{# src/Rubens/WebBundle/Resources/views/Frontend/content.html.twig #}
{% extends "RubensWebBundle:Frontend:frontend.html.twig" %}
{% block title %}Espace public{% endblock %}
{% block body %}
        <div class="row">
            <div class="col-xs_12 col-sm-12 col-md-8 col-lg-8">
                {% for post in posts if post.published %}
                    <h1><a href="{{ path('rubens_web_voir', {'id': post.id} ) }}">{{ post.title }}</a></h1>
{#                        {% for image in post.images %}
                            <img class="img-responsive" src="{{ image('bundles/rubensweb/images/'~image.url).zoomCrop(780,300).grayscale.jpeg }}" alt="{{ image.alt }}" />
                        {% endfor %}#}
                    {% if post.enabledVideo %}
                        {% for video in post.videos %}
                            <div class="flex-video widescreen" style="margin: 0 auto;text-align:center;">
                                <iframe allowfullscreen="" src="http://www.youtube.com/embed/{{video.url}}" frameborder="0"></iframe>
                            </div>
                        {% endfor %}
                    {% else %}
                        {% for image in post.images %}
                            <img class="img-responsive" src="{{ image('bundles/rubensweb/images/'~image.url).zoomCrop(780,300).grayscale.jpeg }}" alt="{{ image.alt }}" />
                        {% endfor %}
                    {% endif %}
                    <p> <i class="glyphicon glyphicon-calendar"></i> Crée le {{ post.createdAt|date('d-m-Y à H:i') }} | <i class="glyphicon glyphicon-pencil"></i> Modifié le {{ post.updatedAt|date('d-m-Y à H:i') }} | <i class="glyphicon glyphicon-ok-sign"></i> Publié le {{ post.publishedAt|date('d-m-Y à H:i') }} | <i class="glyphicon glyphicon-tags"></i> {% for categorie in post.categories %}
                             <span class="label label-info">{{ categorie.title }}</span>
                      {% endfor %}
                    </p>
                    <h4>{{ post.subtitle }} </h4>
                    <p>{{ post.chapo }}</p>
                    {% endfor %}
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
                        <script type="text/javascript"><!--
                        google_ad_client = "ca-pub-8764804742914439";
                        /* pub 3 */
                        google_ad_slot = "7945351997";
                        google_ad_width = 468;
                        google_ad_height = 60;
                        //-->
                        </script>
                        <script type="text/javascript"
                        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
                        </script>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        {% for breve in breves1 %}
                            <h3><a href="{{ path('rubens_web_voir', {'id': breve.id} ) }}">{{ breve.title }}</a></h3>
                            <p>{{ breve.chapo }}</p>
                            <p><small>
                                <i class="glyphicon glyphicon-tags"></i> {% for categorie in breve.categories %}
                                    <span class="label label-info">{{ categorie.title }}</span>
                      {% endfor %} | <i class="glyphicon glyphicon-ok-sign"></i> Publié le {{ breve.createdAt|date('d-m-Y à H:i') }}</small>
                            </p>
                            {% for image in breve.images %}
                                    <img class="img-responsive" src="{{ image('bundles/rubensweb/images/'~image.url).zoomCrop(360,100).grayscale.jpeg }}" alt="{{ image.alt }}" />
                            {% endfor %}
                        {% endfor %}
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        {% for breve in breves2 %}
                            <h3><a href="{{ path('rubens_web_voir', {'id': breve.id} ) }}">{{ breve.title }}</a></h3>
                            <p>{{ breve.chapo }}</p>
                            <p><small>
                                <i class="glyphicon glyphicon-tags"></i> {% for categorie in breve.categories %}
                                    <span class="label label-info">{{ categorie.title }}</span>
                      {% endfor %} | <i class="glyphicon glyphicon-ok-sign"></i> Publié le {{ breve.createdAt|date('d-m-Y à H:i') }}</small>
                            </p>
                            {% for image in breve.images %}
                                  <img class="img-responsive" src="{{ image('bundles/rubensweb/images/'~image.url).zoomCrop(360,100).grayscale.jpeg }}" alt="{{ image.alt }}" />
                            {% endfor %}
                        {% endfor %}
                    </div>
            	</div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
               	<h1>CHRONOS</h1>
               	<ul class="list5">
                {% for chrono in chronos %}
                    <li>
                        <figure>
                        {% for image in chrono.images %}
                              <img src="{{ image('bundles/rubensweb/images/'~image.url).zoomCrop(75,100).grayscale.jpeg }}" alt="{{ image.alt }}" />
                        {% endfor %}
                        </figure>
                        <div class="extra-wrap">
                            <a href="{{ path('rubens_web_voir', {'id': chrono.id} ) }}">{{ chrono.title }}</a>
                            <p><small>
                                <i class="glyphicon glyphicon-tags"></i> {% for categorie in chrono.categories %}
                                    <span class="label label-info">{{ categorie.title }}</span>
                      {% endfor %} | <i class="glyphicon glyphicon-ok-sign"></i> Publié le {{ chrono.createdAt|date('d-m-Y à H:i') }}</small>
                            </p>
                            <p>{{ chrono.chapo }}</p>
                        </div>
                    </li>
                    {% endfor %}
               	</ul>
            </div>
        </div>
{% endblock %}
